<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:background="#1D2DFE"
    android:padding="24dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:elevation="8dp"
        cardView:cardCornerRadius="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:background="#DB2777">

            <TextView
                android:id="@+id/headerRegistrationPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THANK YOU FOR YOUR REGISTRATION!"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your account is not active yet."
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We are currently reviewing all the information you provided, if everything checks out, you will be granted access to our application. "
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thank you for understanding, check back a little later."
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/closeApplicationPendingRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="close application"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/cardview_light_background"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

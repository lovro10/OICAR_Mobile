<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:background="#1D2DFE"
    android:padding="24dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:elevation="8dp"
        cardView:cardCornerRadius="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:background="#DB2777">

            <TextView
                android:id="@+id/headerClearData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HEY, WE ARE SAD TO HEAR YOU ARE CONSIDERING LEAVING..."
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/deletePara1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By accepting the following, you will no longer be considered a user of our application."
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/deletePara2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By agreeing to delete your data, we will safely and transparently delete all data you provided us."
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/deletePara3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you sure you want to dete all data, you will no longer be able to use the application."
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"/>

            <CheckBox
                android:id="@+id/acceptDataDeletion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="I want to delete all my data!" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/deleteData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="delete all data"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/cardview_light_background" />

                <Button
                    android:id="@+id/backDeleteData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="back"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/cardview_light_background" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
